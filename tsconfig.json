{
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "sourceMap": true,
    "moduleResolution": "node", // Important for module resolution
    "resolveJsonModule": true, // If you need to import JSON files
    "types": ["node", "jest"]
  },

  "include": [
    "./**/*.ts", "./*"
  ],
  "exclude": ["node_modules", "dist"]
}